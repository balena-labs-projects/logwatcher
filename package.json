{
  "name": "@balena/logwatcher",
  "description": "Logwatcher monitors journald logs and notifies external services on matching keywords",
  "version": "1.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/balenablocks/logwatcher.git"
  },
  "engines": {
    "node": ">=14.17.0"
  },
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{ts}"
    ],
    "modules": [
      "lib"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "balena-lint --fix"
    ]
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "lint": "balena-lint lib && deplint",
    "lint:fix": "balena-lint --fix lib",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest lib",
    "doc": "typedoc lib/ && touch docs/.nojekyll",
    "prepack": "npm run build",
    "start": "node build/index.js",
    "dev": "NODE_ENV=development nodemon ./lib/index.ts"
  },
  "keywords": [
    "logwatcher",
    "log",
    "watch",
    "monitor",
    "sentry",
    "glitchtip"
  ],
  "author": "Josh Bowling <josh@monarci.com>",
  "license": "AGPL-3.0",
  "dependencies": {
    "@sentry/node": "^6.19.7",
    "journalctl": "^1.1.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@balena/lint": "^6.2.0",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.182",
    "deplint": "^1.1.3",
    "jest": "^27.5.1",
    "lint-staged": "^12.4.1",
    "nodemon": "^2.0.16",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.7.0",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "versionist": {
    "publishedAt": "2022-05-04T12:50:14.718Z"
  }
}
